{
  "manifest_version": 3,
  "name": "NoiseBlock",
  "version": "1.0.0",
  "description": "Oculta publicaciones, comentarios y spoilers en redes sociales y sitios web definidos por el usuario mediante palabras clave personalizadas. Incluye filtro de patrocinados y modo sensible.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.facebook.com/*",
    "https://*.reddit.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.facebook.com/*",
        "https://*.reddit.com/*",
        "<all_urls>"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NoiseBlock"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
} 